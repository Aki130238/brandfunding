<%= form_with(model: @user, url: artisan_profile_path, local: true, method: :patch) do |f| %>
  <div class="row">
    <div class="col-md-4 order-md-1 mb-4">
      <strong>Image:</strong>
      <%= image_tag @user.image.to_s %>
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted"><%= @user.name %></span>
      </h4>
      <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">アイディア一覧</h6>
            <small class="text-muted">投稿したアイディアの管理</small>
          </div>
          <span class="text-muted"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">メッセージ一覧</h6>
            <small class="text-muted">メッセージはこまめにCheck！</small>
          </div>
          <span class="text-muted"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">お支払い・売り上げ管理</h6>
            <small class="text-muted">口座登録・振り込み申請などもコチラ</small>
          </div>
          <span class="text-muted"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between bg-light">
          <div class="text-success">
            <h6 class="my-0">会員情報・変更</h6>
            <small>EXAMPLECODE</small>
          </div>
          <span class="text-success"></span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
          <span></span>
          <strong></strong>
        </li>
      </ul>
    </div>

    <div class="col-md-8 order-md-2">
      <%= f.fields_for :user_profile do |a| %>
        <h4 class="mb-3">プロフィール</h4>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= a.label :family_name %>
            <%= a.text_field :family_name, class: "form-control", id: "firstName", placeholder: "例）山田", value: @user.user_profile.family_name %>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= a.text_field :last_name, class: "form-control", id: "lastName", placeholder: "例）太郎", value: @user.user_profile.last_name  %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstNameSub">First name</label>
            <%= a.text_field :family_name_sub, class: "form-control", id: "firstName", placeholder: "例）やまだ", value: @user.user_profile.family_name_sub %>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= a.text_field :last_name_sub, class: "form-control", id: "lastName", placeholder: "例）たろう", value: @user.user_profile.last_name_sub  %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= a.label :add_no %>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">〒</span>
              </div>
              <%= a.text_field :add_no, class: "form-control", id: "AddNumber", placeholder: "例）0000000（ハイフン不要）" %>
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <%= a.label :prefectures %>
            <%= a.text_field :prefectures, class: "form-control", id: "Prefectures", placeholder: "例）東京都" %>
          </div>
        </div>

        <div class="mb-3">
          <%= a.label :address %>
          <%= a.text_field :address, class: "form-control", id: "address", placeholder: "建物名までご記入ください" %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= a.label :phone_no1 %>
            <%= a.text_field :phone_no1, class: "form-control", id: "PhoneNumber1", placeholder: "例）00000000000(ハイフン不要)" %>
          </div>

          <div class="col-md-6 mb-3">
            <%= a.label :phone_no2 %>
            <%= a.text_field :phone_no2, class: "form-control", id: "PhoneNumber2", placeholder: "例）00000000000(ハイフン不要)" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>
      <% end %>

      <h4 class="mb-3">職人プロフィール</h4>
        <%= f.fields_for :artisan_profile do |b| %>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= b.label :workexp %>
            <%= b.text_field :workexp, class: "form-control", id: "workExp", placeholder: "", value: @user.artisan_profile.workexp %>
          </div>
          <div class="col-md-6 mb-3">
            <%= b.label :homeworkexp %>
            <%= b.text_field :homeworkexp, class: "form-control", id: "homeworkExp", placeholder: "", value: @user.artisan_profile.homeworkexp  %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
          <%= b.label :skill %>
            <%= b.text_field :skill, class: "form-control", id: "skill", placeholder: "" %>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">skill_free</label>
            <%= b.text_field :skill_free, class: "form-control", id: "skillFree", placeholder: ""  %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= b.label :skill_exp %>
            <%= b.text_field :skill_exp, class: "form-control", id: "skillExp", placeholder: "" %>
          </div>
        </div>

        <div class="mb-3">
            <%= b.label :genre %>
            <div class="field">
              <% ArtisanGenreList.all.each do |genreList| %>
                <%= b.check_box :artisan_genre_ids, { multiple: true, checked: @artisan_profile.artisan_genre_lists.find_by(id: genreList.id)
                    .present?, include_hidden: false }, genreList[:id] %>
                <%= genreList.genre_name %>
              <% end %>
            </div>
        </div>

        <div class="mb-3">
          <%= b.label :genre_free %>
          <%= b.text_field :genre_free, class: "form-control", id: "genre_free", placeholder: "" %>
        </div>

        <div class="mb-3">
          <%= b.label :item %>
          <div class="field">
            <% ArtisanItemList.all.each do |itemList| %>
              <%= b.check_box :artisan_item_ids, { multiple: true, checked: @artisan_profile.artisan_item_lists.find_by(id: itemList.id)
                  .present?, include_hidden: false }, itemList[:id] %>
              <%= itemList.item_name %>
            <% end %>
          </div>
        </div>

        <div class="mb-3">
          <%= b.label :item_free %>
          <%= b.text_field :item_free, class: "form-control", id: "item_free", placeholder: "" %>
        </div>

        <div class="mb-3">
        <%= b.label :facillity %>
        <div class="field">
          <% ArtisanFacillityList.all.each do |facillityList| %>
            <%= b.check_box :artisan_facillity_ids, { multiple: true, checked: @artisan_profile.artisan_facillity_lists.find_by(id: facillityList.id)
                .present?, include_hidden: false }, facillityList[:id] %>
            <%= facillityList.facillity_name %>
          <% end %>
        </div>

        <div class="mb-3">
          <%= b.label :facillity_free %>
          <%= b.text_field :facillity_free, class: "form-control", id: "facillity_free", placeholder: "" %>
        </div>

        <div class="mb-3">
          <%= f.submit :"職人プロフィールを編集する", class: "btn btn-danger btn-lg btn-block mt-5" %>
          <%= link_to "戻る", user_path(current_user.id), class: "btn btn-primary btn-lg btn-block mt-3" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
