<main class="container-fluid new-idea-page">
  <div class="row">
    <h1 class="col-12 new-idea-page__title">アイディア編集</h1>
  </div>

  <%= render "navbar" %>

  <section class="tab-content idea-form">
    <div class="tab-pane fade show active idea-form-image" id="ideaImage" role="tabpanel" aria-labelledby="ideaImage-tab">
    <%= form_with(model: @idea, local: true) do |f| %>
      <div class="row">
        <h2 class="col-8 offset-2 idea-form-image__title">完成品のイメージを職人さんに伝える方法を選んでください</h2>
      </div>
      <div class="row">
        <div class="col-3 offset-3 idea-form-image__content__wrap1" id= "ideaContentWrap1">
          <%= f.radio_button :product_image, "似た物がある", class: "idea-form-image__input" %>
          <%= f.label :product_image, "似た物がある", value: "似た物がある", class: "idea-form-image__content", id: "ideaContent1" %>
        </div>
        <div class="col-3 offset-2 idea-form-image__content__wrap2" id= "ideaContentWrap2">
          <%= f.radio_button :product_image, "写真や絵がある", class: "idea-form-image__input" %>
          <%= f.label :product_image, "写真や絵がある", value: "写真や絵がある", class: "idea-form-image__content", id: "ideaContent2" %>
        </div>
      </div>
      <div class="row">
        <div class="col-3 offset-3 idea-form-image__content__wrap1" id= "ideaContentWrap3">
          <%= f.radio_button :product_image, "型紙がある", class: "idea-form-image__input" %>
          <%= f.label :product_image, "型紙がある", value: "型紙がある", class: "idea-form-image__content", id: "ideaContent3" %>
        </div>
        <div class="col-3 offset-2 idea-form-image__content__wrap2" id= "ideaContentWrap4">
          <%= f.radio_button :product_image, "リメイクお直し", class: "idea-form-image__input" %>
          <%= f.label :product_image, "リメイクお直し", value: "リメイクお直し", class: "idea-form-image__content", id: "ideaContent4" %>
        </div>
      </div>
      <div class="row">
        <div class="col-3 offset-3 idea-form-image__content__wrap1" id= "ideaContentWrap5">
          <%= f.radio_button :product_image, "相談したい", class: "idea-form-image__input" %>
          <%= f.label :product_image, "相談したい", value: "相談したい", class: "idea-form-image__content", id: "ideaContent5" %>
        </div>
      </div>
    </div>

    <div class="tab-pane fade idea-form-user" id="ideaUser" role="tabpanel" aria-labelledby="ideaUser-tab">
      <div class="row">
        <h2 class="col-8 offset-2 idea-form-user__title">使う人を選択してください。複数選択可</h2>
      </div>
      <div class="row col-10 offset-2">
        <div class="col-2 idea-form-user__input__wrap" id="userWrap1">
          <%= f.label :idea_user_ids_1 do %>
            <%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user1
                .present?, include_hidden: false }, @idea_user1, id: "userInput1" %>
            <p class="idea-form-user__input__content">&emsp;メンズ&emsp;</p>
          <% end %>
        </div>
        <div class="col-2 idea-form-user__input__wrap">
          <%= f.label :idea_user_ids_2 do %>
            <%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user2
                .present?, include_hidden: false }, @idea_user2 %>
            <p class="idea-form-user__input__content">レディース</p>
          <% end %>
        </div>
        <div class="col-2 idea-form-user__input__wrap">
          <%= f.label :idea_user_ids_3 do %>
            <%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user3
                .present?, include_hidden: false }, @idea_user3 %>
            <p class="idea-form-user__input__content">&emsp;キッズ&emsp;</p>
          <% end %>
        </div>
        <div class="col-2 idea-form-user__input__wrap">
          <%= f.label :idea_user_ids_4 do %>
            <%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user4
                .present?, include_hidden: false }, @idea_user4 %>
            <p class="idea-form-user__input__content2">ベビー＆<br>マタニティ</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="tab-pane fade idea-form-category" id="ideaCategory" role="tabpanel" aria-labelledby="ideaCategory-tab">
      <h2 class="col-8 offset-2 idea-form-category__title">作るもののカテゴリを選択してください</h2>
      <div class="row col-10">
        <div class="col-3 offset-2 idea-form-category__content__wrap" id= "ideaCategoryWrap1">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "洋服", class: "idea-form-category__input" %>洋服</p>
        </div>
        <div class="col-3 idea-form-category__content__wrap2" id= "ideaCategoryWrap2">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "和服", class: "idea-form-category__input" %>和服</p>
        </div>
        <div class="col-3 idea-form-category__content__wrap2" id= "ideaCategoryWrap3">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "ドレス・衣装", class: "idea-form-category__input" %>ドレス・衣装</p>
        </div>
      </div>
      <div class="row col-10">
        <div class="col-3 offset-2 idea-form-category__content__wrap" id= "ideaCategoryWrap4">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "作業服・ユニフォーム", class: "idea-form-category__input" %>作業服・ユニフォーム</p>
        </div>
        <div class="col-3 idea-form-category__content__wrap2" id= "ideaCategoryWrap5">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "バッグ・帽子", class: "idea-form-category__input" %>バッグ・帽子</p>
        </div>
        <div class="col-3 idea-form-category__content__wrap2" id= "ideaCategoryWrap6">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "ジャケット・アウター", class: "idea-form-category__input" %>ジャケット・アウター</p>
        </div>
      </div>
      <div class="row col-10">
        <div class="col-3 offset-2 idea-form-category__content__wrap" id= "ideaCategoryWrap7">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "小物", class: "idea-form-category__input" %>小物</p>
        </div>
        <div class="col-3 idea-form-category__content__wrap2" id= "ideaCategoryWrap8">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "インテリア", class: "idea-form-category__input" %>インテリア</p>
        </div>
        <div class="col-3 idea-form-category__content__wrap2" id= "ideaCategoryWrap9">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "その他", class: "idea-form-category__input" %>その他</p>
        </div>
      </div>
    </div>

    <div class="tab-pane fade idea-form-category-details" id="ideaCategoryDetails" role="tabpanel" aria-labelledby="ideaCategoryDetails-tab">

    </div>

    <div class="tab-pane fade idea-form-material" id="ideaMaterial" role="tabpanel" aria-labelledby="ideaMaterial-tab">

    </div>

    <div class="tab-pane fade idea-form-details" id="ideaDetails" role="tabpanel" aria-labelledby="ideaDetails-tab">

    </div>
    <div class="idea-form__button_wrap">
      <%= f.submit "保存", class: "idea-form__button" %>
      <%= f.submit "プレビュー", class: "idea-form__button-2" %>
    </div>
    <% end %>
  </section>
</main>

