<main class="container-fluid new-idea-page">
  <div class="row">
    <h1 class="col-12 new-idea-page__title">アイディア<%= idea_title %></h1>
  </div>

  <%= render "navbar" %>

  <section class="tab-content idea-form">
    <div class="tab-pane fade show active idea-form-image" id="ideaImage" role="tabpanel" aria-labelledby="ideaImage-tab">
    <%= form_with(model: @idea, local: true) do |f| %>
      <div class="row">
        <h2 class="col-8 offset-2 idea-form-image__title">完成品のイメージを職人さんに伝える方法を選んでください</h2>
      </div>
      <div class="row col-12">
        <div class="col-10 col-sm-5 col-md-4 offset-2 offset-sm-1 offset-md-2 idea-form-image__input__wrap" id= "ideaImageWrap1">
          <p class="idea-form-image__content"><%= f.radio_button :product_image, "似た物がある", class: "idea-form-image__input" %>似た物がある</p>
        </div>
        <div class="col-10 col-sm-5 col-md-4 offset-2 offset-sm-1 idea-form-image__input__wrap2" id= "ideaImageWrap2">
          <p class="idea-form-image__content"><%= f.radio_button :product_image, "写真や絵がある", class: "idea-form-image__input" %>写真や絵がある</p>
        </div>
      </div>
      <div class="row col-12">
        <div class="col-10 col-sm-5 col-md-4 offset-2 offset-sm-1 offset-md-2 idea-form-image__input__wrap" id= "ideaImageWrap3">
          <p class="idea-form-image__content"><%= f.radio_button :product_image, "型紙がある", class: "idea-form-image__input" %>型紙がある</p>
        </div>
        <div class="col-10 col-sm-5 col-md-4 offset-2 offset-sm-1 idea-form-image__input__wrap2" id= "ideaImageWrap4">
          <p class="idea-form-image__content"><%= f.radio_button :product_image, "リメイクお直し", class: "idea-form-image__input" %>リメイクお直し</p>
        </div>
      </div>
      <div class="row col-12 idea-form__content__wrap">
        <div class="col-10 col-sm-5 col-md-4 offset-2 offset-sm-1 offset-md-2 idea-form-image__input__wrap" id= "ideaImageWrap5">
          <p class="idea-form-image__content"><%= f.radio_button :product_image, "相談したい", class: "idea-form-image__input" %>相談したい</p>
        </div>
      </div>
      <div class="row idea-form__button_wrap">
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">プレビュー</p>
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">次へ</p>
      </div>
    </div>

    <div class="tab-pane fade idea-form-user" id="ideaUser" role="tabpanel" aria-labelledby="ideaUser-tab">
      <div class="row">
        <h2 class="col-8 offset-2 idea-form-user__title">使う人を選択してください。複数選択可</h2>
      </div>
      <div class="row col-12 idea-form__content__wrap">
        <div class="col-8 col-sm-5 col-md-4 col-lg-2 offset-3 offset-sm-1 offset-md-2 offset-lg-2 idea-form-user__input__wrap" id= "ideaUserWrap1">
          <p class="idea-form-user__content"><%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user1.present?, include_hidden: false, class: "idea-form-user__input" }, @idea_user1 %>メンズ</p>
        </div>
        <div class="col-8 col-sm-5 col-md-4 col-lg-2 offset-3 offset-sm-1 offset-lg-0 idea-form-user__input__wrap2" id= "ideaUserWrap2">
          <p class="idea-form-user__content"><%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user2.present?, include_hidden: false, class: "idea-form-user__input" }, @idea_user2 %>レディース</p>
        </div>
        <div class="col-8 col-sm-5 col-md-4 col-lg-2 offset-3 offset-sm-1 offset-md-2 offset-lg-0 idea-form-user__input__wrap idea-form-user__input__wrap3" id= "ideaUserWrap3">
          <p class="idea-form-user__content"><%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user3.present?, include_hidden: false, class: "idea-form-user__input" }, @idea_user3 %>キッズ</p>
        </div>
        <div class="col-8 col-sm-5 col-md-4 col-lg-2 offset-3 offset-sm-1 offset-lg-0 idea-form-user__input__wrap2" id= "ideaUserWrap4">
          <p class="idea-form-user__content2"><%= f.check_box :idea_user_ids, { multiple: true, checked: @idea_user4.present?,  include_hidden: false, class: "idea-form-user__input" }, @idea_user4 %>ベビー＆<br>マタニティ</p>
        </div>
      </div>
      <div class="row idea-form__button_wrap">
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">前へ</p>
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">次へ</p>
      </div>
    </div>

    <div class="tab-pane fade idea-form-category" id="ideaCategory" role="tabpanel" aria-labelledby="ideaCategory-tab">
      <h2 class="col-8 offset-2 idea-form-category__title">作るもののカテゴリを選択してください</h2>
      <div class="row col-12">
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-2 idea-form-category__input__wrap" id= "ideaCategoryWrap1">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "洋服", class: "idea-form-category__input" %>洋服</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category__input__wrap2" id= "ideaCategoryWrap2">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "和服", class: "idea-form-category__input" %>和服</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category__input__wrap2" id= "ideaCategoryWrap3">
          <p class="idea-form-category__content2"><%= f.radio_button :idea_category, "ドレス・衣装", class: "idea-form-category__input" %>ドレス・衣装</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-2 idea-form-category__input__wrap" id= "ideaCategoryWrap4">
          <p class="idea-form-category__content3"><%= f.radio_button :idea_category, "作業服・ユニフォーム", class: "idea-form-category__input" %>作業服・ユニフォーム</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category__input__wrap2" id= "ideaCategoryWrap5">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "バッグ・帽子", class: "idea-form-category__input" %>バッグ・帽子</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category__input__wrap2" id= "ideaCategoryWrap6">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "小物", class: "idea-form-category__input" %>小物</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-2 idea-form-category__input__wrap" id= "ideaCategoryWrap7">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "インテリア", class: "idea-form-category__input" %>インテリア</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category__input__wrap2" id= "ideaCategoryWrap8">
          <p class="idea-form-category__content"><%= f.radio_button :idea_category, "その他", class: "idea-form-category__input" %>その他</p>
        </div>
      </div>
      <div class="row idea-form__button_wrap">
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">前へ</p>
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">次へ</p>
      </div>
    </div>

    <div class="tab-pane fade idea-form-category-details" id="ideaCategoryDetails" role="tabpanel" aria-labelledby="ideaCategoryDetails-tab">
      <h2 class="col-8 offset-2 idea-form-category-details__title">カテゴリの詳細を選択してください</h2>
      <div class="row col-12">
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-2 idea-form-category-details__input__wrap" id= "ideaCategoryDetailsWrap1">
          <p class="idea-form-category-details__content idea-form-category-details__content4"><%= f.radio_button :idea_category_details, "ジャケット・アウター", class: "idea-form-category-details__input" %>ジャケット・アウター</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category-details__input__wrap2" id= "ideaCategoryDetailsWrap2">
          <p class="idea-form-category-details__content idea-form-category-details__content4"><%= f.radio_button :idea_category_details, "トップス・シャツ", class: "idea-form-category-details__input" %>トップス・シャツ</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category-details__input__wrap2" id= "ideaCategoryDetailsWrap3">
          <p class="idea-form-category-details__content2 idea-form-category-details__content4"><%= f.radio_button :idea_category_details, "ボトムス・スカート", class: "idea-form-category-details__input" %>ボトムス・スカート</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-2 idea-form-category-details__input__wrap" id= "ideaCategoryDetailsWrap4">
          <p class="idea-form-category-details__content3 idea-form-category-details__content6"><%= f.radio_button :idea_category_details, "ワンピース・オーバーオール", class: "idea-form-category-details__input" %>ワンピース・オーバーオール</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category-details__input__wrap2" id= "ideaCategoryDetailsWrap5">
          <p class="idea-form-category-details__content idea-form-category-details__content5"><%= f.radio_button :idea_category_details, "スーツ・タキシード", class: "idea-form-category-details__input" %>スーツ・タキシード</p>
        </div>
        <div class="col-10 col-sm-5 col-md-3 offset-2 offset-sm-1 offset-md-0 idea-form-category-details__input__wrap2" id= "ideaCategoryDetailsWrap6">
          <p class="idea-form-category-details__content idea-form-category-details__content5"><%= f.radio_button :idea_category_details, "その他", class: "idea-form-category-details__input" %>その他</p>
        </div>
      </div>
      <div class="row idea-form__button_wrap">
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">前へ</p>
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">次へ</p>
      </div>
    </div>

    <div class="tab-pane fade idea-form-material" id="ideaMaterial" role="tabpanel" aria-labelledby="ideaMaterial-tab">
      <h2 class="idea-form-material__title">生地や材料のご用意について</h2>
      <div class="row col-10 idea-form__content__wrap">
        <div class="col-3 offset-2 idea-form-category-details__input__wrap" id= "ideaMaterialWrap1">
          <p class="idea-form-material__content"><%= f.radio_button :idea_material, "相談したい", class: "idea-form-material__input" %>相談したい</p>
        </div>
        <div class="col-3 idea-form-material__input__wrap2" id= "ideaMaterialWrap2">
          <p class="idea-form-material__content"><%= f.radio_button :idea_material, "すべて用意できる", class: "idea-form-material__input" %>すべて用意できる</p>
        </div>
        <div class="col-3 idea-form-material__input__wrap2" id= "ideaMaterialWrap3">
          <p class="idea-form-material__content"><%= f.radio_button :idea_material, "生地のみ", class: "idea-form-material__input" %>生地のみ</p>
        </div>
      </div>
      <div class="row idea-form__button_wrap">
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">前へ</p>
        <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">次へ</p>
      </div>
    </div>

    <div class="tab-pane fade idea-form-idea-details" id="ideaDetails" role="tabpanel" aria-labelledby="ideaDetails-tab">
      <h2 class="col-10 offset-1 idea-form-idea-details__title">作るものに関するくわしい情報を職人さんに伝えましょう</h2>
      <div class="row">
        <div class="col-md-4 col-lg-3 offset-1 d-flex idea-form-idea-details__title__wrap">
          <h3 class="col-6 col-md-11 idea-form-idea-details__title1">アイディアのタイトル</h3>
          <h4 class="col-2 col-md-3 col-xl-2 idea-form-idea-details__title2">必須</h4>
        </div>
        <div class="col-md-8 idea-form-idea-details__input__wrap">
          <p class="offset-1 offset-md-3"><%= f.text_field :idea_title, class: "col-11 form-control idea-form-idea-details__input", placeholder: "どんなものを作りたいのかタイトルでわかるようにしましょう" %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-lg-3 offset-1 d-flex idea-form-idea-details__title__wrap">
          <h3 class="col-6 col-md-11 idea-form-idea-details__title1">アイテム製作数量</h3>
          <h4 class="col-2 col-md-3 col-xl-2 idea-form-idea-details__title2">必須</h4>
        </div>
        <div class="col-md-8 idea-form-idea-details__input__wrap">
          <p class="offset-1 offset-md-3 form-inline"><%= f.number_field :idea_amount, class: "col-md-6 col-xl-4 form-control idea-form-idea-details__input", placeholder: "数値を入力" %>&emsp;点</p>
          <p class="col-9 col-lg-8 col-xl-7 offset-1 offset-md-3 idea-form-idea-details__guide">最低製作数量を伝えて必要な予算を確定させましょう。<br>職人さんへの製作意欲につながります。</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-lg-3 offset-1 d-flex idea-form-idea-details__title__wrap">
          <h3 class="col-6 col-md-11 idea-form-idea-details__title1">アイテムの概要と仕様</h3>
          <h4 class="col-2 col-md-3 col-xl-2 idea-form-idea-details__title2">必須</h4>
        </div>
        <div class="col-md-8 idea-form-idea-details__input__wrap">
          <p class="offset-1 offset-md-3"><%= f.text_area :idea_about, class: "col-11 col-md-11 form-control idea-form-idea-details__input2", placeholder: "型数、色数、利用生地、仕様など。できるだけ細かい内容を伝えるようにしましょう。" %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-lg-3 offset-1 d-flex idea-form-idea-details__title__wrap">
          <h3 class="col-6 col-md-11 idea-form-idea-details__title1 idea-form-idea-details__title3">用途</h3>
          <h4 class="col-2 col-md-3 col-xl-2 idea-form-idea-details__title2">必須</h4>
        </div>
        <div class="col-md-8 idea-form-idea-details__input__wrap">
          <p class="offset-1 offset-md-3"><%= f.select :idea_usage, [["用途を選択",""], ["販売・お店ユニフォーム", "販売・お店ユニフォーム"], ["個人利用", "ギフト"], ["サンプル", "お教室衣装"]], {}, {class: "col-9 col-md-8 col-lg-5 idea-form-idea-details__input3"} %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-lg-3 offset-1 d-flex idea-form-idea-details__title__wrap">
          <h3 class="col-6 col-md-11 idea-form-idea-details__title1">職人へ伝えたいこと</h3>
          <h4 class="col-2 col-md-3 col-xl-2 idea-form-idea-details__title2">必須</h4>
        </div>
        <div class="col-md-8 idea-form-idea-details__input__wrap">
          <p class="offset-1 offset-md-3"><%= f.text_area :idea_commit, class: "col-11 form-control idea-form-idea-details__input2", placeholder: "作るものへのこだわり、設備の希望など" %></p>
        </div>
        <div class="row idea-form__button_wrap">
          <p class="col-8 col-sm-4 col-md-3 col-lg-2 offset-1 d-inline-block idea-form__button">プレビュー</p>
          <%= f.submit "保存", class: "col-8 col-sm-4 col-md-3 col-lg-2 offset-1 idea-form__button" %>
        </div>
      </div>
    </div>
    <% end %>
  </section>
</main>
