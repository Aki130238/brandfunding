<main class="container-fluid show-project-page">
  <div class="row show-project-page__header"></div>
  <div class="show-project1">
    <div class="row show-project1">
      <h2 class="col-11 show-project1__title"><%= @project.project_title %></h2>
    </div>
    <div class="row show-project1">
      <div class="col-md-6">
        <p class="show-project1__image">画像</p>
        <p class="show-project1__sns">SNS連携</p>
      </div>
      <div class="col-md-5 show-project1__content__wrap">
        <p><%= svg("yen-sign-solid.svg", class: "show-project1__icon") %>&ensp;現在の支援総額</p>
        <p class="col-md-11 show-project1__project-fund"><%= @project.project_value.project_fund %>支援額</p>
        <p class="col-md-11 show-project1__progress">105%</p>
        <p class="col-md-5 show-project1__target-fund"><%= @project.project_value.target_fund %></p>
        <div class="show-project1__user-image__wrap">
          <p class="col-md-4 show-project1__patron"><%= svg("users-solid.svg", class: "show-project1__icon2") %>&ensp;パトロン数</p>
          <p class="col-md-4 show-project1__user-image">ユーザーイメージ</p>
        </div>
        <p class="col-md-4 show-project1__supporter">サポーター人数</p>
        <div class="show-project1__owner-name__wrap">
          <p><%= svg("clock-regular.svg", class: "show-project1__icon3") %>&ensp;募集終了まで残り</p>
          <p class="col-md-5 offset-md-2 show-project1__owner-name">オーナーネーム</p>
        </div>
        <div class="show-project1__prefectures__wrap">
          <p class="col-md-4 show-project1__deadline">募集期限</p>
          <p class="col-md-3 show-project1__prefectures">都道府県</p>
        </div>
      </div>
    </div>
  </div>







<%= @project.project_text %>
<%= @project.project_report.project_reports %>

<% if @comments.nil?%>

<% else %>
  <% @comments.each do |c| %>
    <div>
      <a href="/users/<%= @project.user.id %>"><%= c.user.email %></a>
      <%= c.content %>
      <hr>
    </div>
  <% end %>
<% end %>
<%= form_with(model: [@project, @comment], local: true) do |f| %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>

<% if logged_in? %>
  <%= form_with(model: @project_return, url:"/projects/#{@project.id}",  local: true) do |re| %>            <p class="form-inline"><%= re.text_field :return_title, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.file_field :return_item_img, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.text_field :return_item_fund, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.number_field :return_item_count, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.text_area :return_item_about, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.number_field :return_item_sponsors, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.date_field :delivery_date, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.text_area :return_item_remark, class: "col-12 form-control project-form-report__input" %></p>
    <p class="form-inline"><%= re.text_area :return_option, class: "col-12 form-control project-form-report__input" %></p>
    <%= re.submit "保存", class: "project-form__button" %>
  <% end %>
<% else %>
<% end %>

</main>
