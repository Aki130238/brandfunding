<main class="container-fluid projects-page">
  <div class="row">
    <div class="col-12 projects-page__header">
      <%= render "layouts/sort_bar" %>
    </div>
  </div>

  <div class="row col-md-10 project-list__wrap">
    <div class="row col-12 project-list_void"></div>
    <% @projects.each do |pr|%>
      <div class="project-list col-md-3">
        <%= link_to project_path(pr.id), class: "project-list__link" do %>
          <div class="row">
            <span class="col-12 project-list__image"><%= pr.project_image.project_img %>画像</span>
          </div>
          <div class="row">
            <p class="project-list__title"><%= pr.project_text %></p>
          </div>
          <div class="row project-list__bar">
            <p class="project-list__bar__content">SUCCESS</p>
          </div>
          <div class="row project-list__guide">
            <p class="col-md-4">現在</p>
            <p class="col-md-4">パトロン</p>
            <p class="col-md-4">残り</p>
          </div>
          <div class="row project-list__content">
            <p class="col-md-4"><%= pr.project_value.project_fund %>10,000円</p>
            <p class="col-md-4"><%= pr.project_idea.project_returns %>9人</p>
            <p class="col-md-4">
              <% if Time.now >= pr.project_value.recruitment_deadline %>
                終了
              <% else %>
                5日
              <% end %>
            </p>
          </div>
          <div class="row project-list__bar2">&ensp;</div>
        <% end %>
      </div>
    <% end %>
    <div class="row col-12 project-list_void"></div>
  </div>
</main>