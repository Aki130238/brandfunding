        <tr><td><% f.label :phone_no2 %></td></tr>
        <tr><td><%= f.text_field :phone_no2, placeholder: :phone_no2 %></td></tr>
      </table>
    
    <%= f.submit :"ユーザー登録する", class: "btn btn-info" %>
