<div class="container">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <h2 class="form-signin-heading mt-5">ログインしてください</h2>
      <%= form_with(model: @user, local: true) do |f| %>
      
      <%= f.label :name, class: "sr-only mt-1" %>
      <%= f.text_field :name, id: "inputName", class: "form-control mt-1", placeholder: "Name" %>

      <%= f.label :email, class: "sr-only mt-1" %>
      <%= f.email_field :email, id: "inputEmail", class: "form-control mt-1", placeholder: "Email address" %>

      <%= f.label :password, class: "sr-only mt-1" %>
      <%= f.password_field :password, id: "inputPassword", class: "form-control mt-1", placeholder: "Password"  %>

      <%= f.label :password_confirmation, class: "sr-only mt-1" %>
      <%= f.password_field :password_confirmation, id: "inputPasswordConfirmation", class: "form-control mt-1", placeholder: "Password_confirmation"  %>

      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block mt-3" %>
    <% end %>
</div>
