<!DOCTYPE html>
<html>
  <head>
    <title>BRANDFUNDING</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="navbar navbar-expand-sm">
        <h1><%= link_to "BRANDFUNDING", root_path, class: "header__title" %></h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
          </ul>
          <ul class="nav navbar-nav">
            <% if logged_in? %>
              <li><%= link_to "プロフィール", user_path(current_user.id), class: "header__navlink" %></li>
              <li><%= link_to "職人情報", artisan_profile_path(current_user.id), class: "header__navlink" %></li>
              <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: "header__navlink" %></li>
            <% else %>
              <li><%= link_to "ユーザー登録", new_user_path, class: "header__navlink" %></li>
              <li><%= link_to "ログイン", new_session_path, class: "header__navlink" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <% flash.each do |key, value| %><%= content_tag(:div, value, class: "#{key} flash") %><% end %>

    <%= yield %>

    <footer class="container-fluid footer">
      <div class="row footer__wrap">
        <h1 class="col-12 col-5 col-lg-4 col-xl-3 footer__title__wrap"><%= link_to "BRAND FUNDING", root_path, class: "footer__title" %></h1>
        <div class="d-flex col-12 col-lg-6 footer__column__wrap">
          <p class="footer__column">ご利用規約</p>
          <p class="footer__column2">|</p>
          <p class="footer__column2">プライバシーポリシー</p>
          <p class="footer__column2">|</p>
          <p class="footer__column2">運営会社</p>
        </div>
      </div>
    </footer>
  </body>
</html>
