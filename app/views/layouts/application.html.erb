<!DOCTYPE html>
<html>
  <head>
    <title>BRUNDFUNDING</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <% flash.each do |key, value| %><%= content_tag(:div, value, class: "#{key}") %><% end %>
    <header>
      <nav class="nav">
        <button type="button" class="nav navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
          <span class="sr-only">Bootstrap</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          
        </button>
        <% if logged_in? %>
          <a class="navbar-brand"><%= "#{current_user.name}" %>„ÅÆBRUNDFUNDING</a>
        <% else %>
          <a class="navbar-brand">BRUNDFUNDING</a>
        <% end %>
      </div>
      <div id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to"TOP", root_path %></li>
        </ul>
        <ul class="nav navbar-nav">
          <% if logged_in? %>
            <li><%= link_to "profile", user_path(current_user.id) %></li>
            <li><%= link_to "artisan", artisan_profile_path(current_user.id) %></li>
            <li><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
            
          <% else %>
            <li><%= link_to "Sign up", new_user_path %></li>
            <li><%= link_to "Login", new_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>

