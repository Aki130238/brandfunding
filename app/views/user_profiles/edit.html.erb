<main class="container-fluid my-page">
  <h1 class="row col-12 col-lg-10 my-page__title">会員情報・住所確認/変更</h1>
  <div class="row">
    <nav class="col-10 col-md-5 col-lg-4 col-xl-3 menu offset-1 offset-md-0">
      <ul>
        <li class="menu__user_image"><%= image_tag @user.image.to_s %></li>
        <li class="menu__user_name"><%= @user.name %></li>
        <li class="menu__li menu__li_border-top">
          <div class="card card-body">
            <button type="button" class="menu__button" data-toggle="collapse" data-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample">
              <h1 class="menu__title"><span class="menu__item">▼</span>&ensp;プロジェクト管理</h1>
            </button>
          </div>
          <div class="collapse" id="collapseExample1">
            <div class="card card-body">
              <p class="menu__list"><%= link_to "プロジェクト新規作成", new_project_path, class: "menu__link" %></p>
              <p class="menu__list"><%= link_to "プロジェクト一覧", projects_path, class: "menu__link" %></p>
            </div>
          </div>
        </li>
        <li class="menu__li">
          <div class="card card-body">
            <button type="button" class="menu__button" data-toggle="collapse" data-target="#collapseExample2" aria-expanded="false" aria-controls="collapseExample">
              <h1 class="menu__title"><span class="menu__item">▼</span>&ensp;アイディア管理</h1>
            </button>
          </div>
          <div class="collapse" id="collapseExample2">
            <div class="card card-body">
              <p class="menu__list"><%= link_to "アイディア新規作成", new_idea_path, class: "menu__link" %></p>
              <p class="menu__list"><%= link_to "アイディア一覧", ideas_path, class: "menu__link" %></p>
            </div>
          </div>
        </li>
        <li class="menu__li">
          <div class="card card-body">
            <button type="button" class="menu__button" data-toggle="collapse" data-target="#collapseExample3" aria-expanded="false" aria-controls="collapseExample">
              <h1 class="menu__title"><span class="menu__item">▼</span>&ensp;スポンサー管理</h1>
            </button>
          </div>
          <div class="collapse" id="collapseExample3">
            <div class="card card-body">
              <p class="menu__list">スポンサー</p>
              <p class="menu__list">スポンサー</p>
            </div>
          </div>
        </li>
        <li class="menu__li">
          <h1 class="menu__title-2">お気に入りプロダクター</h1>
        </li>
        <li class="menu__li">
          <h1 class="menu__title-2">お気に入りスポンサー</h1>
        </li>
        <li class="menu__li">
          <h1 class="menu__title-2">お気に入りデザイナー</h1>
        </li>
        <li class="menu__li">
          <%= link_to edit_user_profile_path(@user.id), class: "menu__title-2__link" do %>
            <h1 class="menu__title-2">会員情報変更</h1>
          <% end %>
        </li>
      </ul>
    </nav>

    <section class="col-10 col-md-6 offset-1 offset-md-0 my-page__form">
      <%= form_with(model: @user_profile, url: user_profile_path, local: true, method: :patch) do |f| %>
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :family_name %>
            <%= f.text_field :family_name, class: "form-control", id: "firstName", placeholder: "例）山田"  %>

            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= f.text_field :last_name, class: "form-control", id: "lastName", placeholder: "例）太郎"  %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstNameSub">First name</label>
            <%= f.text_field :family_name_sub, class: "form-control", id: "firstName", placeholder: "例）やまだ" %>

            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= f.text_field :last_name_sub, class: "form-control", id: "lastName", placeholder: "例）たろう"  %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :add_no %>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">〒</span>
              </div>
              <%= f.text_field :add_no, class: "form-control", id: "AddNumber", placeholder: "例）000-0000" %>
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <%= f.label :prefectures %>
            <%= f.text_field :prefectures, class: "form-control", id: "Prefectures", placeholder: "例）東京都" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control", id: "address", placeholder: "建物名までご記入ください" %>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :phone_no1 %>
            <%= f.text_field :phone_no1, class: "form-control", id: "PhoneNumber1", placeholder: "例）00000000000(ハイフン不要)" %>
            <div class="invalid-feedback" style="width: 100%;">
              Your username is required.
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <%= f.label :phone_no2 %>
            <%= f.text_field :phone_no2, class: "form-control", id: "PhoneNumber2", placeholder: "例）00000000000(ハイフン不要)" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>
        <div class="my-page__form__button_wrap">
          <%= f.submit "プロフィールを編集する", class: "btn btn-danger btn-lg btn-block mt-3" %>
          <%= link_to "戻る", user_path(current_user.id), class: "btn btn-primary btn-lg btn-block mt-3" %>
        </div>

      <% end %>
    </section>
  </div>
</main>
