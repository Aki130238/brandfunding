<main class="container-fluid my-page">
  <h1 class="row col-12 col-lg-10 my-page__title">会員情報・住所確認/変更</h1>
  <div class="row">

    <%= render "layouts/profile_menu" %>

    <section class="col-10 col-md-6 offset-1 offset-md-0 my-page__form">
      <%= form_with(model: @user_profile, url: user_profile_path, local: true, method: :patch) do |f| %>
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :family_name %>
            <%= f.text_field :family_name, class: "form-control my-page__form__input", id: "firstName", placeholder: "例）山田"  %>

            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= f.text_field :last_name, class: "form-control my-page__form__input", id: "lastName", placeholder: "例）太郎"  %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstNameSub">First name</label>
            <%= f.text_field :family_name_sub, class: "form-control my-page__form__input", id: "firstName", placeholder: "例）やまだ" %>

            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= f.text_field :last_name_sub, class: "form-control my-page__form__input", id: "lastName", placeholder: "例）たろう"  %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :add_no %>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">〒</span>
              </div>
              <%= f.text_field :add_no, class: "form-control my-page__form__input", id: "AddNumber", placeholder: "例）000-0000" %>
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <%= f.label :prefectures %>
            <%= f.text_field :prefectures, class: "form-control my-page__form__input", id: "Prefectures", placeholder: "例）東京都" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control my-page__form__input", id: "address", placeholder: "建物名までご記入ください" %>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :phone_no1 %>
            <%= f.text_field :phone_no1, class: "form-control my-page__form__input", id: "PhoneNumber1", placeholder: "例）00000000000(ハイフン不要)" %>
            <div class="invalid-feedback" style="width: 100%;">
              Your username is required.
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <%= f.label :phone_no2 %>
            <%= f.text_field :phone_no2, class: "form-control my-page__form__input", id: "PhoneNumber2", placeholder: "例）00000000000(ハイフン不要)" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>
        <div class="my-page__form__button_wrap">
          <%= f.submit "プロフィールを編集する", class: "btn btn-primary btn-lg btn-block mt-3 my-page__form__button" %>
          <%= link_to "戻る", user_path(current_user.id), class: "btn btn-success btn-lg btn-block mt-3 my-page__form__button" %>
        </div>

      <% end %>
    </section>
  </div>
</main>
