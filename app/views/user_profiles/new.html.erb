<div class="container">
  <div class="py-5 text-center">
    <h2></h2>
    <p class="lead"></p>
  </div>
  <%= form_with(model: @user_profile, url: user_profile_path, local: true, method: :patch) do |f| %>
    <div class="row">
      <div class="col-md-4 order-md-2 mb-4">
        <strong>Image:</strong>
        <%= image_tag @user.image.to_s %>
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted"><%= @user.name %></span>
        </h4>
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">アイディア一覧</h6>
              <small class="text-muted">投稿したアイディアの管理</small>
            </div>
            <span class="text-muted"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">メッセージ一覧</h6>
              <small class="text-muted">メッセージはこまめにCheck！</small>
            </div>
            <span class="text-muted"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">お支払い・売り上げ管理</h6>
              <small class="text-muted">口座登録・振り込み申請などもコチラ</small>
            </div>
            <span class="text-muted"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between bg-light">
            <div class="text-success">
              <h6 class="my-0">会員情報・変更</h6>
              <small>EXAMPLECODE</small>
            </div>
            <span class="text-success"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span></span>
            <strong></strong>
          </li>
        </ul>
      </div>

      <div class="col-md-8 order-md-1">
        
          <h4 class="mb-3">ユーザー情報</h4>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :family_name %>
              <%= f.text_field :family_name, class: "form-control", id: "firstName", placeholder: "例）山田"  %>

              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <label for="lastName">Last name</label>
              <%= f.text_field :last_name, class: "form-control", id: "lastName", placeholder: "例）太郎"  %>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstNameSub">First name</label>
              <%= f.text_field :family_name_sub, class: "form-control", id: "firstName", placeholder: "例）やまだ" %>

              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <label for="lastName">Last name</label>
              <%= f.text_field :last_name_sub, class: "form-control", id: "lastName", placeholder: "例）たろう"  %>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :add_no %>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">〒</span>
                </div>
                <%= f.text_field :add_no, class: "form-control", id: "AddNumber", placeholder: "例）000-0000" %>
                <div class="invalid-feedback" style="width: 100%;">
                  Your username is required.
                </div>
              </div>
            </div>
                          
            <div class="col-md-6 mb-3">
              <%= f.label :prefectures %>
              <%= f.text_field :prefectures, class: "form-control", id: "Prefectures", placeholder: "例）東京都" %>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :address %>
            <%= f.text_field :address, class: "form-control", id: "address", placeholder: "建物名までご記入ください" %>
            <div class="invalid-feedback">
              Please enter your shipping address.
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :phone_no1 %>
              <%= f.text_field :phone_no1, class: "form-control", id: "PhoneNumber1", placeholder: "例）00000000000(ハイフン不要)" %>
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
                          
            <div class="col-md-6 mb-3">
              <%= f.label :phone_no2 %>
              <%= f.text_field :phone_no2, class: "form-control", id: "PhoneNumber2", placeholder: "例）00000000000(ハイフン不要)" %>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
          </div>
      </div>
    </div>
  <%= f.submit :"ユーザー情報を編集する", class: "btn btn-primary btn-lg btn-block" %>
  <% end %>
</div>
